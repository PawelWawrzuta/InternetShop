@model  IEnumerable<INET_Project.Models.Product>


@{
    ViewData["Title"] = "Main_Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="CarouselSection"></section>

<div id="themeSlider" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#themeSlider" data-slide-to="0" class="active"></li>
        <li data-target="#themeSlider" data-slide-to="1"></li>
        <li data-target="#themeSlider" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            <div class="imgOverlay"></div>
            <img style="height:320px;width:100%" src="~/images/sample_images_1.jpg" class="img-responsive">
            <div class="carousel-caption">
            </div>
        </div>
        <div class="item">
            <div class="imgOverlay"></div>
            <img style="height:320px;width:100%" src="~/images/sample_images_2.jpg" class="img-responsive">
            <div class="carousel-caption">
            </div>
        </div>
        <div class="item">
            <div class="imgOverlay"></div>
            <img style="height:320px;width:100%" src="~/images/sample_images_3.jpg" class="img-responsive">
            <div class="carousel-caption">
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#themeSlider" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only"> Previous</span>
    </a>
    <a class="right carousel-control" href="#themeSlider" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<section id="SearchSection"></section>
<hr style="height:2px;border-width:0;color:gray;background-color:gray">

<div>
    <h3>Wyszukaj produkt</h3>
    <div class="form-inline">
        <input type="search" placeholder="Czego szukasz?" aria-label="Search" class="form-control" />
        <button type="submit" class="btn btn-outline-dark">
            <i class="fas fa-search"> Wyszukaj</i>
        </button>
    </div>
</div>

<section id="ProductsSection"></section>
<hr style="height:2px;border-width:0;color:gray;background-color:gray">

<div class="row">
    <div class="col-md-12">
        <div class="page-heade">
            <h3>Nasze produkty</h3>
            <table class="table">
                
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Brand)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.QtAvailable)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UnitPrice)
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in INET_Project.Controllers.HomeController.products)
                        {
                        <tr>

                            @*<td>
            @if (item.ImageName != null)
            {
                <img src="~/images/@item.ImageName" width="50" height="50" style="border:1px solid black">
            }
        </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Brand)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.QtAvailable)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitPrice)
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
</div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(document).ready(function () {
            $('.carousel').carousel();
        });
    </script>
}
